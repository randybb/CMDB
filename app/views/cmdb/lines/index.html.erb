<h1>
  <small>Lines</small>
</h1>

<table class="table table-striped table-condensed">
  <thead>
  <tr>
    <th>Name</th>
    <th>Site</th>
    <th>Step</th>
  </tr>
  </thead>

  <tbody>
  <% @lines.each do |line| %>
      <% l = line.cmdb %>
      <tr>
        <td><%= link_to l[:name], "/cmdb/lines/#{l[:infrid]}" %> <a href="https://r2.grenoble.hp.com/operations/direct/infra/<%= l[:infrid] %>"><span class="fa fa-database"></span></a></td>
        <td><%= link_to l[:sitid_value], "/cmdb/sites/#{l[:sitid]}" %> <a href="https://r2.grenoble.hp.com/operations/direct/infra/<%= l[:sitid] %>"><span class="fa fa-database"></span></a></td>
        <td><%= l["step"] %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
