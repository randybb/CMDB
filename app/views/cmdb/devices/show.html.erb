<% d = @device.cmdb %>
<div class="row">
  <div class="col-xs-11 col-sm-11 col-md-11 col-lx-11">
    <h1>
      <small>Device</small> <%= d[:name] %>
      <a href="https://r2.grenoble.hp.com/operations/direct/infra/<%= d[:infrid] %>"><span class="fa fa-external-link"></span></a>
      <small>id: <%= d[:infrid] %></small>
    </h1>
    <h4>
      <small>Alias</small> <%= d[:alias_equipment] %></h4>
    <p>
      <%= link_to('<span class="fa fa-file-text"></span> Configuration'.html_safe, {controller: "cmdb/devices", id: @device[:_id], action: "show_configuration"}) unless @device.file_config.nil? %>
      <%= link_to(' | <span class="fa fa-list-ol"></span> Show Interfaces'.html_safe, {controller: "cmdb/devices", id: @device[:_id], action: "show_interfaces"}) if @device.device && @device.device[:interfaces] %>
      <%= link_to(' | <span class="fa fa-tree"></span> Show CDP'.html_safe, {controller: "cmdb/devices", id: @device[:_id], action: "show_cdp"}) if @device.device && @device.device[:neighbors] && @device.device[:neighbors][:cdp] %>
    </p>
  </div>
  <div class="col-xs-1 col-md-1 col-lx-1">
    <p class="text-right">
      <%= link_to('<button type="button" class="btn btn-primary btn-sm">Update from device</button><br />'.html_safe, {action: "update_from_device"}) %>
      <small>Created at</small> <%= d[:creationdate].to_s(:custom_short) %>
      <br/>
      <small>Updated at</small> <%= d[:lastchangedate].to_s(:custom_short) %>
      <br/>
      <small>Dev updated at
      </small> <%= Time.parse(@device.timestamps[:parsed_configuration]).strftime(Time::DATE_FORMATS[:custom_short]) unless @device.timestamps.nil? %>
      <br/>
    </p>
  </div>
</div>
<table class="table table-striped table-condensed">
  <tbody>
  <% ( %>
      <tr>
        <th>Parent device</th>
        <td><%= link_to d[:up_value], "/cmdb/devices/#{d[:up]}" %>
          <a href="https://r2.grenoble.hp.com/operations/direct/infra/<%= d[:up] %>"><span class="fa fa-external-link"></span></a>
          <small>id: <%= d[:up] %></small>
        </td>
      </tr>
  <% ) if d[:up].present? && d[:up] > 0 %>
  <tr>
    <th>Mgmt IP Address</th>
    <td><%= d[:ip] %> <%= d[:ip_mask] %></td>
  </tr>
  <tr>
    <th>IP Address</th>
    <td><%= d[:real_ip] %> <%= d[:real_ip_mask] %></td>
  </tr>
  <tr>
    <th>Default gateway</th>
    <td><%= d[:default_gw] %></td>
  </tr>
  <% ( %><
      <tr>
        <th>Peer ID</th>
        <td><%= d[:peerid] %></td>
      </tr>
  <% ) if d[:peerid].present? && d[:peerid] > 0 %>
  <tr>
    <th>Site</th>
    <td>
      <% ( %><%= link_to d[:sitid_value], "/cmdb/sites/#{d[:sitid]}" %>
          <a href="https://r2.grenoble.hp.com/operations/direct/infra/<%= d[:sitid] %>"><span class="fa fa-external-link"></span></a>
          <small>id: <%= d[:sitid] %></small>
      <% ) if d[:sitid] != 0 %>
    </td>
  </tr>
  <tr>
    <th>Location</th>
    <td><%= d[:floor] %></td>
  </tr>
  <tr>
    <th>Criticality</th>
    <td><%= d[:criticality] %></td>
  </tr>
  <tr>
    <th>Impact</th>
    <td><%= d[:impact] %></td>
  </tr>
  <tr>
    <th>Service type</th>
    <td><%= d[:service_type] %></td>
  </tr>
  <tr>
    <th>Category</th>
    <td><%= d[:category] %></td>
  </tr>
  <tr>
    <th>Brand</th>
    <td><%= d[:brand] %></td>
  </tr>
  <tr>
    <th>Type</th>
    <td><%= d[:type] %></td>
  </tr>
  <tr>
    <th>Description</th>
    <td><%= d[:description] %></td>
  </tr>
  <tr>
    <th>Model</th>
    <td><%= d[:model_nb] %></td>
  </tr>
  <tr>
    <th>Complexity</th>
    <td><%= d[:complexity] %></td>
  </tr>
  <tr>
    <th>Sys Object ID</th>
    <td><%= d[:sys_object_id] %></td>
  </tr>
  <tr>
    <th>Part number</th>
    <td><%= d[:part_nb] %></td>
  </tr>
  <tr>
