  <% ( %>
      <tr>
        <th>Moved to production</th>
        <td><%= d[:first_mtp_date].to_s(:custom_short) %></td>
      </tr>
  <% ) unless (d[:first_mtp_date].nil? || d[:first_mtp_date] == "0000-00-00 00:00:00") %>
  <% ( %>
      <tr>
        <th>Moved to obsolete</th>
        <td><%= d[:last_obsolete_date].to_s(:custom_short) %></td>
      </tr>
  <% ) unless (d[:last_obsolete_date].nil? || d[:last_obsolete_date] == "0000-00-00 00:00:00") %>
  </tbody>
</table>