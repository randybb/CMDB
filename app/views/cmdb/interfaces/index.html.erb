<h1>
  <small>Interfaces</small>
</h1>

<table class="table table-striped table-condensed">
  <thead>
  <tr>
    <th>Name</th>
    <th>IP Address</th>
    <th>Device</th>
    <th>Step</th>
  </tr>
  </thead>

  <tbody>
  <% @interfaces.each do |interface| %>
      <% i = interface.cmdb %>
      <tr>
        <td><%= link_to i[:name], "/cmdb/interfaces/#{i[:infrid]}" %> <a href="https://r2.grenoble.hp.com/operations/direct/infra/<%= i[:infrid] %>"><span class="fa fa-database"></span></a></td>
        <td><%= i[:ip] %>/<%= i[:ip_mask] %></td>
        <td><%= link_to i[:deviceid_value], "/cmdb/devices/#{i[:deviceid]}" %> <a href="https://r2.grenoble.hp.com/operations/direct/infra/<%= i[:deviceid] %>"><span class="fa fa-database"></span></a></td>
        <td><%= i[:step] %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
