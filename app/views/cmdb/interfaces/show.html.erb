<% i = @interface.cmdb %>
<h1>
  <small>Interface</small> <%= i[:name] %>
  <a href="https://r2.grenoble.hp.com/operations/direct/infra/<%= i[:infrid] %>"><span class="fa fa-external-link"></span></a>
  <small>id: <%= i[:infrid] %></small>
</h1>
<h4>
  <small>On device</small> <%= i[:deviceid_value] %>
  <a href="https://r2.grenoble.hp.com/operations/direct/infra/<%= i[:deviceid] %>"><span class="fa fa-external-link"></span></a>
  <small>id: <%= i[:deviceid] %></small>
</h4>

<table class="table table-striped table-condensed">
  <tbody>
  <% i.each do |key, value| %>
    <tr>
      <% ( %><th><%= key %></th><td><%= value %></td><% )  %>
    </tr>
<% end %>
  </tbody>
</table>
