<h1>CMDB: Sites</h1>

<table class="table table-striped table-condensed">
  <thead>
  <tr>
    <th>Name</th>
  </tr>
  </thead>

  <tbody>
  <% @sites.each do |site| %>
      <% d = site.cmdb %>
      <tr>
        <td><%= link_to d[:name], "/cmdb/sites/#{d[:infrid]}" %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>
